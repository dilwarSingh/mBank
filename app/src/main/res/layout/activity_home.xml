<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
           android:background="@drawable/profileiconorange"/>

        <evacuees.com.mbank.customFonts.MyTextView
            android:id="@+id/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Available Balance"
            android:textColor="#F7941E"
            android:textSize="19dp"
           />

        <ImageButton
            android:id="@+id/map_loc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/locationiconorange" />

    </LinearLayout>

    <evacuees.com.mbank.customFonts.MyTextView
        android:id="@+id/account_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="1000"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#BCBEC0"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Money"
            android:background="@android:color/transparent"
            android:layout_marginLeft="30dp"
            android:textColor="#F7941E"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#BCBEC0"
            android:layout_marginTop="10dp"

            />

        <Button
            android:id="@+id/sendMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Money"
            android:background="@android:color/transparent"
            android:layout_marginRight="30dp"
            android:textColor="#F7941E"/>
    </LinearLayout>

    <evacuees.com.mbank.customFonts.MyTextView
        android:id="@+id/account_number"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Account Number : 1232123212"
        android:gravity="center"
        android:background="#D1D3D4"
        android:lines="1"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/AllTransactions"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="All Transactions"
        android:gravity="center"
        android:background="#E6E7E8"
        android:paddingEnd="250dp"
        android:layout_marginTop="2dp"
        />


    <ListView
        android:id="@+id/tracHis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</LinearLayout>